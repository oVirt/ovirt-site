<?xml version="1.0" encoding="UTF-8"?>
- pages = sitemap.resources.find_all{|p| p.source_file.match(/\.html/) }
%urlset{:xmlns => "http://www.sitemaps.org/schemas/sitemap/0.9"}
  - pages.each do |p|
    %url
      %loc http://#{site_domain}/#{p.destination_path.gsub('/index.html','')}
      %priority 0.7
